{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Default capabilities for the Godoty desktop app",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "deep-link:default",
        "shell:allow-open",
        "shell:allow-stdin-write",
        "shell:allow-kill",
        {
            "identifier": "shell:allow-spawn",
            "allow": [
                {
                    "name": "binaries/godoty-brain",
                    "sidecar": true,
                    "args": true
                }
            ]
        },
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "binaries/godoty-brain",
                    "sidecar": true,
                    "args": true
                },
                {
                    "name": "sh",
                    "args": ["-c", { "validator": ".+" }]
                },
                {
                    "name": "cmd",
                    "args": ["/C", { "validator": ".+" }]
                },
                {
                    "name": "powershell",
                    "args": ["-Command", { "validator": ".+" }]
                }
            ]
        }
    ]
}