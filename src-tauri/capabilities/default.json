{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "updater:default",
    "process:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/opencode-cli",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
