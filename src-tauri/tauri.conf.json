{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "godoty",
  "version": "0.0.0",
  "identifier": "com.godoty.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Godoty",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/opencode.json",
      "resources/antigravity.json"
    ],
    "externalBin": [
      "bin/opencode-cli"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/MarbleSodas/Godoty/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY1NjkwOENENDg1QzA2MzUKUldTSzF5L2h5K3RjY3V6K0c5R3p4a2tjcW55b1l1aGk1N1F3QnNua2Z2VjV2a1hTMVlXNw=="
    }
  }
}
