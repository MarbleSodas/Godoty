{
  "name": "godoty",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "dev:isolated": "lsof -ti:4098 | xargs kill -9 || true && mkdir -p src-tauri/target/dev-config && GODOTY_PORT=4098 VITE_OPENCODE_SERVER_PORT=4098 GODOTY_CONFIG_DIR=\"$(pwd)/src-tauri/target/dev-config\" bun run tauri dev",
    "dev:all": "(trap 'kill 0' SIGINT; bun run scripts/dev-server.ts & vite)",
    "build": "vite build",
    "serve": "vite preview",
    "tauri": "tauri",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "build:mcp": "bun scripts/build-mcp.ts",
    "build:mcp:fast": "bun scripts/build-mcp.ts --skip-docs",
    "postinstall": "bun scripts/setup-sidecar.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/app": "workspace:*",
    "@opencode-ai/ui": "workspace:*",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.3.5",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "solid-js": "1.9.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "4.1.18",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.9.1",
    "jsdom": "^28.0.0",
    "tailwindcss": "4.1.18",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^4.0.18"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ]
}
